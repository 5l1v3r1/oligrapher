{
  "name": "@public-accountability/oligrapher",
  "version": "0.5.0",
  "description": "Network graph visualizer built for LittleSis",
  "main": "app/main.jsx",
  "scripts": {
    "dev-server": "webpack-dev-server --color --progress --config webpack.devServer.js",
    "serve": "http-server ./build -p 8091",
    "build": "yarn run build-dev && yarn run build-prod",
    "build-prod": "webpack -p --config webpack.prod.js",
    "build-dev": "webpack --config webpack.dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "profile": "webpack --profile --display-modules --config webpack.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/public-accountability/oligrapher"
  },
  "author": "Public Accountability Initiative",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/public-accountability/oligrapher/issues"
  },
  "homepage": "https://littlesis.org/oligrapher",
  "dependencies": {
    "@githubprimer/octicons-react": "^8.5.0",
    "@public-accountability/littlesis-api": "^0.0.3",
    "classnames": "^2.2.6",
    "core-js": "3",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-anything-sortable": "^1.7.4",
    "react-color": "^2.17.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.9.0",
    "react-draggable": "^4.0.2",
    "react-hotkeys": "^1.1.4",
    "react-medium-editor": "^1.8.1",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "redux-undo": "^0.6.1",
    "shortid": "^2.2.15",
    "springy": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "http-server": "^0.11.1",
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "react-test-renderer": "^16.9.0",
    "redux-logger": "^3.0.6",
    "regenerator-runtime": "^0.13.3",
    "sinon": "^7.4.2",
    "style-loader": "^1.0.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@public-accountability.*?\\.js$))"
    ],
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(css)$": "<rootDir>/app/styles/test/styleMock.js"
    },
    "roots": [
      "test"
    ],
    "testRegex": "(.*)\\.test\\.jsx?$"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "> 2%",
    "Firefox ESR",
    "not dead"
  ]
}

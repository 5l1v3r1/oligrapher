{
  "name": "@public-accountability/oligrapher",
  "version": "0.5.3",
  "description": "Network graph visualizer built for LittleSis",
  "main": "app/Oligrapher.jsx",
  "scripts": {
    "dev-server": "webpack-dev-server --color --progress --config webpack.devServer.js",
    "serve": "http-server ./build -p 8091",
    "build": "yarn run build-dev && yarn run build-prod",
    "build-prod": "webpack -p --config webpack.prod.js",
    "build-dev": "webpack --config webpack.dev.js",
    "test": "mocha",
    "test:watch": "jest --watch",
    "profile": "webpack --profile --display-modules --config webpack.prod.js",
    "lint": "yarn run lint:js && yarn run lint:scss",
    "lint:js": "eslint app",
    "lint:scss": "stylelint app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/public-accountability/oligrapher"
  },
  "author": "Public Accountability Initiative",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/public-accountability/oligrapher/issues"
  },
  "homepage": "https://littlesis.org/oligrapher",
  "dependencies": {
    "@githubprimer/octicons-react": "^8.5.0",
    "@public-accountability/littlesis-api": "^0.0.5",
    "classnames": "^2.2.6",
    "core-js": "3.3.2",
    "immer": "^4.0.1",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-anything-sortable": "^1.7.4",
    "react-color": "^2.17.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.10.1",
    "react-draggable": "^4.0.2",
    "react-hotkeys": "^2.0.0",
    "react-medium-editor": "^1.8.1",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "redux-undo": "^0.6.1",
    "shortid": "^2.2.15",
    "springy": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/register": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.5.1",
    "eslint-plugin-mocha": "^6.2.0",
    "eslint-plugin-react": "^7.16.0",
    "http-server": "^0.11.1",
    "mocha": "^6.2.1",
    "node-sass": "^4.12.0",
    "react-test-renderer": "^16.10.1",
    "redux-logger": "^3.0.6",
    "regenerator-runtime": "^0.13.3",
    "sass-loader": "^8.0.0",
    "sinon": "^7.5.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.2",
    "webpack-merge": "^4.2.2"
  },
  "mocha": {
    "require": [
      "@babel/register",
      "chai/register-expect"
    ],
    "file": [
      "test/setup.js"
    ],
    "spec": "./test/**/*.test.js?(x)"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@public-accountability.*?\\.js$))"
    ],
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(css)$": "<rootDir>/app/styles/test/styleMock.js"
    },
    "roots": [
      "test"
    ],
    "testRegex": "(.*)\\.test\\.jsx?$"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "> 2%",
    "Firefox ESR",
    "not dead"
  ]
}

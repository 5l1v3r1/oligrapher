{
  "name": "@public-accountability/oligrapher",
  "version": "0.5.3",
  "description": "Network graph visualizer built for LittleSis",
  "main": "app/Oligrapher.jsx",
  "scripts": {
    "build-dev": "webpack --env.development",
    "build-prod": "webpack --env.production",
    "dev-server": "webpack-dev-server --color --progress --env.dev_server --env.api_url=http://localhost:8081",
    "build": "yarn run build-dev && yarn run build-prod",
    "serve": "http-server ./dist -p 8091",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:debug": "mocha --inspect-brk",
    "profile": "webpack --profile --display-modules --env.production",
    "lint": "yarn run lint:js && yarn run lint:scss",
    "lint:js": "eslint app",
    "lint:scss": "stylelint app",
    "repl": "babel-node",
    "upgrade": "yarn upgrade-interactive --latest && yarn upgrade"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/public-accountability/oligrapher"
  },
  "author": "Public Accountability Initiative",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/public-accountability/oligrapher/issues"
  },
  "homepage": "https://littlesis.org/oligrapher",
  "dependencies": {
    "@public-accountability/littlesis-api": "^0.0.7",
    "immer": "^5.3.6",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-color": "^2.18.0",
    "react-dom": "^16.12.0",
    "react-draggable": "^4.2.0",
    "react-icons": "^3.9.0",
    "react-redux": "^7.2.0",
    "react-select": "^3.0.8",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "core-js": "3.6.4",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-react": "^7.18.3",
    "http-server": "^0.12.1",
    "jsdom": "^16.2.0",
    "mocha": "^7.0.1",
    "react-test-renderer": "^16.12.0",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "sinon": "^8.1.1",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.14.2",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "mocha": {
    "require": [
      "@babel/register",
      "chai/register-expect"
    ],
    "file": [
      "test/setup.js"
    ],
    "spec": "./test/**/*.test.js?(x)"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@public-accountability.*?\\.js$))"
    ],
    "modulePaths": [
      "<rootDir>/app/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(css)$": "<rootDir>/app/styles/test/styleMock.js"
    },
    "roots": [
      "test"
    ],
    "testRegex": "(.*)\\.test\\.jsx?$"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "> 2%",
    "Firefox ESR",
    "not dead"
  ]
}
